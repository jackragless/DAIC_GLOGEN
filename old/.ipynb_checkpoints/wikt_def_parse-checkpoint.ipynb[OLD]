    "import nltk\n",
    "from wiktionaryparser import WiktionaryParser\n",
    "parser = WiktionaryParser()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 21,
   "id": "floating-indicator",
   "metadata": {},
   "outputs": [],
   "source": [
    "def define(kw):\n",
    "    wikt_object = parser.fetch(kw,'english')\n",
    "    dictionary = {}\n",
    "    for et in wikt_object:\n",
    "        for pos in et['definitions']:\n",
    "            if pos['partOfSpeech'] not in dictionary.keys():\n",
    "                dictionary[pos['partOfSpeech']] = []\n",
    "            for k in pos['text'][1:]:\n",
    "                k = nltk.sent_tokenize(k)[0]\n",
    "                if not (k[0]=='('):\n",
    "                    dictionary[pos['partOfSpeech']].append('(general) ' + k)\n",
    "                else:\n",
    "                    dictionary[pos['partOfSpeech']].append(k)\n",
    "    return dictionary"
   ]
  }
